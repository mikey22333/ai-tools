# Production Environment Variables for Memory Optimization
# Copy these to your Render service dashboard

# Node.js Memory Settings
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=512

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
NEXT_IMAGE_OPTIMIZE=true

# Database Connection Pooling (Supabase)
SUPABASE_CONNECTION_POOL_SIZE=5

# Application Settings
MAX_TOOLS_PER_PAGE=50
MAX_CATEGORIES_CACHE=25
ENABLE_PERFORMANCE_MONITORING=true

# Cache Settings (if using Redis)
REDIS_TTL=3600
ENABLE_CACHE=true

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Your actual environment variables (set these in Render dashboard)
# NEXT_PUBLIC_BASE_URL=https://your-app.onrender.com
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
# JWT_SECRET=your_secure_jwt_secret_min_32_chars
