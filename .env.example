# Environment Variables Template
# Copy this to .env.local for development or .env.production for production
# Fill in your actual values

# Next.js Configuration
NEXT_PUBLIC_BASE_URL=https://your-domain.com
NODE_ENV=production

# JWT Secret for admin authentication
# Generate a secure random string for production (minimum 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your-very-secure-jwt-secret-key-minimum-32-characters-long

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Stripe Configuration (if using payments)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@allaitools.com

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Database Backup (optional)
DATABASE_BACKUP_URL=your-backup-database-url
